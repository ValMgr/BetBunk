{% extends 'base.html.twig' %} {% block title %}Create quiz{% endblock %} {%
block body %}
<main class="container py-5">
  <h2 class="text-lg font-bold">Paramètres du quiz:</h2>
  <div>
    {{ form_start(QuizForm) }}
    <div class="flex columns-2 gap-5">
      <div class="w-6/12">
        {{
          form_row(QuizForm.title, {
            attr: { class: "form-field" },
            label: "Titre (*) : "
          })
        }}
      </div>
      <div class="w-6/12">
        {{
          form_row(QuizForm.time, {
            attr: { class: "form-field" },
            label: "Temps en secondes (*) : "
          })
        }}
      </div>
    </div>

    {{
      form_row(QuizForm.description, {
        attr: { class: "form-field" },
        label: "Description (*) : "
      })
    }}

    <div class="flex columns-2 gap-5">
      <div class="w-6/12">
        {{
          form_row(QuizForm.thumbnail, {
            attr: { class: "form-field" },
            label: "Miniature (*) : "
          })
        }}
      </div>
      <div class="w-6/12">
        {{
          form_row(QuizForm.image, {
            attr: { class: "form-field" },
            label: "Image : "
          })
        }}
      </div>
    </div>

    <h2 class="text-lg font-bold my-3">Categories:</h2>

    <ul
      class="categories"
      data-index="{{ QuizForm.categories|length > 0 ? QuizForm.categories|last.vars.name + 1 : 0 }}"
      data-prototype="{{ form_widget(QuizForm.categories.vars.prototype)|e('html_attr') }}"
    >
      {% for categorie in QuizForm.categories %}
      <li>{{ form_row(categorie) }}</li>
      {% endfor %}
    </ul>

    <div>
      <button
        type="button"
        class="add_item_link btn btn-secondary"
        data-collection-holder-class="categories"
      >
        Crée une catégory
      </button>

    </div>

    <p class="mt-3 italic text-sm">(Je ne sais pas comment ajouter un formulaire de question dans le formulaire de catégory généré au clic...)</p>
      
    </div>
    

    <div class="my-5">
      <button class="btn btn-primary">Publier un quiz</button>
    </div>

    {{ form_end(QuizForm) }}
  </div>
</main>
{% endblock %}
