{% extends 'base.html.twig' %}

{% block title %}Hello QuizFormController!{% endblock %}

{% block body %}

    <a href="/quiz/create/type" class="btn btn-primary">Cr√©e un quiz</a>

    <div class="mt-5">

        {% for quiz in quizzes %}
        <a href="/quiz/play/{{quiz.id}}" class="cardQuizz w-full">
            <div class="w-1/4">
                <img src='{{quiz.thumbnail}}' alt='{{ quiz.title }}'/>
            </div>
            <div class="w-3/4">
                <h3>{{ quiz.title }}</h3>
                <p>{{ quiz.description }}</p>
            </div>
        </a>
            
        {% endfor %}


    </div>

{% endblock %}
