<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="flex flex-row justify-between p-4 px-8 bg-slate-50 items-center shadow-md ">
            <a href="/">
                <img class="w-20 max-h-20" src="/img/logo.png" />
            </a>
            <nav>
                <div class="space-x-4">
                    <a href="/">Test 1</a>
                    <a href="/">Test 2</a>
                    <a href="/">Test 3</a>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}

        <footer class="flex flex-row justify-evenly p-4 px-8 items-center bg-slate-50 drop-shadow sticky inset-x-0 bottom-0 border-t-2">
            <div class="flex flex-col">
                <a href="/">Copyright</a>
                <a href="/">Test</a>
            </div>
            <div class="flex flex-col">
                <a href="/">Contact</a>
                <a href="/">Contact - Test</a>
            </div>
            <div>
                <a href="/">
                    <img class="w-20 max-h-20" src="/img/logo.png" />
                </a>
            </div>
            
        </footer>
    </body>
</html>
