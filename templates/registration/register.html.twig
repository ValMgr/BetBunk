{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}


<div class="container mt-10">

    <h1 class="text-2xl mb-4">Cr√©er un compte</h1>

    {{ form_start(registrationForm) }}
    <div class="block">
        {{ form_row(registrationForm.username, {'attr': {'class': 'form-field'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-field'}, label: 'Password'}) }}
        <div class="my-4">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox'}}) }}
        </div>

        <button type="submit" class="btn">Register</button>
    </div>

    {{ form_end(registrationForm) }}

</div>


{% endblock %}